<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muite.zongshe1.mapper.TaskMapper">


    <insert id="insert" parameterType="com.muite.zongshe1.entity.Task">
        insert into task (start,destination,goods_type,truck_id)
        values (#{start},#{destination},#{goodsType},#{truckId})
    </insert>

    <update id="updateTaskTruckId" parameterType="com.muite.zongshe1.entity.Task">
        UPDATE task
        SET truck_id = #{truckId}
        WHERE id = #{id}
    </update>
    <update id="updateStatus" parameterType="com.muite.zongshe1.entity.Task">
        UPDATE task
        SET status=#{status}
        WHERE id = #{id}
    </update>


    <select id="selectAll" resultType="com.muite.zongshe1.entity.Task">
        SELECT * FROM task
    </select>

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO task (start, destination, goods_type, status, truck_id,weight,volume)
        VALUES
        <foreach collection="list" item="task" separator=",">
            (
            #{task.start},
            #{task.destination},
            #{task.goodsType},
            #{task.status},
            #{task.truckId},
            #{task.weight},
            #{task.volume}
            )
        </foreach>
    </insert>



</mapper>